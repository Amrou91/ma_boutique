{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <div class="container">
        <h4 class="section_title">S'inscrire</h4>
            {{ form_start(registrationForm) }}
                <div class="form-group"> {{ form_row(registrationForm.firstname, {'attr': {'class': 'contact_input'}}) }} </div>
                <div class="form-group"> {{ form_row(registrationForm.lastname, {'attr': {'class': 'contact_input'}}) }} </div>
                <div class="form-group"> {{ form_row(registrationForm.email, {'attr': {'class': 'contact_input'}}) }} </div>
                <div class="form-group"> {{ form_row(registrationForm.plainPassword.first, {
                    'attr': {'class': 'contact_input'}
                }) }} </div>
                <div class="form-group"> {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'contact_input'}}) }} </div>
                <div>{{ form_row(registrationForm.agreeTerms) }}</div>
                <button class="btn btn-lg btn-primary" type="submit">
                    S'inscrire
                </button>
            {{ form_end(registrationForm) }}
                   
    </div>
</div>
{% endblock %}
