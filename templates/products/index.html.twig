{% extends 'base.html.twig' %}

{% block title %}Nos Produits- La Boutique Dabchi.Com{% endblock %}

{% block body %}


<div class="row">
    <div class="col-md-3">
        <h5>Filtrer</h5>
        {{ form_start(form) }}
            {{ form_row(form.string)}}
            <h4>Categories</h4>
            {{ form_row(form.category) }}
        {{ form_end(form) }}
    </div>
    <div class="col-md-8">
        <h5>Nos Produits</h5>
        
        <div class="row product-container">
            {% for produit in produits %} 
                <div class="col-md-4">
                    <div class="product-items text-center">
                        <a href="{{ path('show_products', {'slug':produit.slug})}}"> <img src="/images/products/{{produit.featuredImage}}" alt="{{ produit.name}}" class="img-fluid"></a>
                        <h5>{{ produit.name}}</h5>
                        <span class="product-subtitle">{{ produit.subtitle}}</span>
                        <span class="product-price">{{ (produit.price/100) | number_format(2, ',') }} â‚¬</span> 
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
</div>

{% endblock %}

