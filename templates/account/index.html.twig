{% extends 'base.html.twig' %}

{% block title %}Mon compte _ La boutique{% endblock %}

{% block body %}
    {% for message in app.flashes('enregistre') %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}
<h3>Mon Compte</h3> <br>
{% if is_granted("ROLE_ADMIN") %}
    <li> <a href="/admin" target="_blank">Vous étes un administrateur, accéder au backoffice</a> </li>
{% endif %}
<p>Biennvenue <b>{{ app.user.firstname | title }}</b> dans votre compte.</p>
<p> C'est dans cet espace que vous allez gèrer toutes vos informations personnelles</p>
<hr>
<div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/password.png') }}" alt="Modifier mon mot de passe"><br/>
                <a href="{{ path('initialisation_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/address-book.png') }}" alt="Gérer mes adresses"><br/>
                <a href="{{ path('account_address') }}">Gérer mes adresses</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/purchase.png') }}" alt="Mes commandes"><br/>
                <a href="{{ path('account_order') }}">Mes commandes</a>
            </div>
        </div>
    </div>
<hr>
{% endblock %}
